<tr>
	<td class="col-6">
		<div class="post">
			<img src="https://placehold.co/300x300" />
			<div class="topic-details">
				<a
					class="topic"
					href="/post/<%= post._id %>"
					><%= post.title %></a
				>
				<p class="author">
					Author:
					<a href="/profile/<%= post.author._id%>"
						><%= post.author.username %></a
					>
				</p>
			</div>
		</div>
	</td>
	<td class="col-1">
		<div class="single-number"><%=post.commentsCount%></div>
	</td>
	<td class="col-1">
		<div class="single-number"><%= post.viewsCount%></div>
	</td>
	<td class="col-4">
		<div class="last-post">
			<div>
				<span>by&nbsp</span>
				<span class="author">
					<a
						href="/profile/<%=post.lastCommentBy?._id || 'No one'%>"
						class="author-outline"
						><%= post.lastCommentBy?.username || 'No one'%></a
					>
				</span>
			</div>
			<div class="date"><%= new Date(post.lastComment).toDateString() %></div>
		</div>
	</td>
</tr>
